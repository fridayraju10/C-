// C++ program to demonstrate the use of multiple variables 
// in for loops 

#include <iostream> 
using namespace std; 

int main() 
{ 
	// initializing loop variable 
	int m, n; 

	// loop having multiple variable and updations 
	for (m = 1, n = 1; m <= 5; m += 1, n += 2) { 
		cout << "iteration " << m << endl; 
		cout << "m is: " << m << endl; 
		cout << "j is: " << n << endl; 
	} 

	return 0; 
}
