#include <iostream>
#include <iomanip> // for setw and setfill
using namespace std;

int main() {
    int num = 42;
    double pi = 3.14159;
    string text = "GFG";

    // Using setw to set the width of the output field
    cout << "Without setw:" << endl;
    cout << num << endl;
    cout << pi << endl;
    cout << text << endl;

    cout << "\nWith setw(10):" << endl;
    cout << setw(10) << num << endl;
    cout << setw(10) << pi << endl;
    cout << setw(10) << text << endl;

    // Using setw and setfill together
    cout << "\nWith setw(10) and setfill('*'):" << endl;
    cout << setfill('*') << setw(10) << num << endl;
    cout << setfill('*') << setw(10) << pi << endl;
    cout << setfill('*') << setw(10) << text << endl;

    return 0;
}
